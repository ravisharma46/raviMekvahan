<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/frame_rect">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="8dp"
                    android:clickable="true"
                    android:fontFamily="@font/gotham_boook"
                    android:padding="8dp"
                    android:text="28th, July 2018"
                    android:textColor="@color/app_caption_dark_grey"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="32dp"
                    android:fontFamily="@font/gotham_boook"
                    android:paddingTop="8dp"
                    android:text="10:30 am"
                    android:textColor="@color/app_caption_dark_grey"
                    android:textSize="10sp" />


            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/gradient_bottom"
                android:scaleY=".5" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/frame_rect"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:clickable="true"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Total 100.00"
                    android:textColor="@color/green"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="12dp"
                    android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                    android:drawablePadding="4dp"
                    android:fontFamily="@font/gotham_boook"
                    android:padding="16dp"
                    android:text="Details"
                    android:textColor="@color/chart_deep_red"
                    android:textSize="10sp"
                    android:textStyle="bold" />


            </FrameLayout>
        </LinearLayout>



    </androidx.cardview.widget.CardView>




</LinearLayout>