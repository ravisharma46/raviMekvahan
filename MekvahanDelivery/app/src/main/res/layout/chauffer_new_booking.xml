<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/cv_details"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#A5A5A5"
                        android:fontFamily="@font/gotham_book"
                        android:paddingTop="10dp"
                        android:textSize="10sp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="16dp"
                        android:text="28th July, 2018"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="10sp"
                        android:background="#A5A5A5"
                        android:fontFamily="@font/gotham_book"
                        android:gravity="right"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="16dp"
                        android:text="10:30 a.m"
                        android:textColor="#ffffff" />


                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/order_id_2"
                        android:layout_gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="@drawable/booking_history_background"
                        android:fontFamily="@font/gotham_book"
                        android:paddingBottom="12dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="12dp"
                        android:textSize="12sp"
                        android:text="#123"
                        android:textColor="@android:color/black" />

                    <ImageView
                        android:layout_width="8dp"
                        android:src="@drawable/tick"
                        android:layout_gravity="right"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="16dp"
                        android:layout_height="8dp" />

                </FrameLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/booking_history_background"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/logo"
                            android:layout_width="20dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_height="24dp"
                            android:src="@drawable/suzuki_logo" />

                        <TextView
                            android:id="@+id/car_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semibold"
                            android:paddingTop="8dp"
                            android:layout_marginTop="4dp"
                            android:paddingLeft="8dp"
                            android:textSize="12sp"
                            android:text="Wagonar R"
                            android:textColor="#5B5B5B" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:orientation="horizontal"
                        >



                        <TextView
                            android:id="@+id/numberPlate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gotham_book"
                            android:paddingLeft="44dp"
                            android:paddingBottom="12dp"
                            android:paddingTop="16dp"
                            android:paddingRight="16dp"
                            android:textSize="12sp"
                            android:text="DL1P3204"
                            android:textColor="#848484" />

                        <TextView
                            android:id="@+id/service_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gotham_book"
                            android:gravity="end"
                            android:paddingBottom="12dp"
                            android:textSize="12sp"
                            android:paddingRight="16dp"
                            android:text="Chauffeur service"
                            android:textColor="#DB0A16" />

                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">





                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/status"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium1"
                        android:gravity="left"
                        android:layout_gravity="center"
                        android:paddingTop="8dp"
                        android:paddingBottom="4dp"
                         android:paddingLeft="48dp"
                        android:text="Awaiting confirmation"
                        android:textColor="@color/chart_light_red"
                        android:textSize="12sp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="#F5F5F5" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <Button

                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/mybutton"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="4dp"
                        android:text="Accept"
                        android:textSize="14sp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="#ffffff" />

                    <Button

                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"

                        android:textSize="14sp"
                        android:background="@drawable/dark_grey_button"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Reject"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="#ffffff" />



                    <!--<Button-->

                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginVertical="10dp"-->
                    <!--android:layout_marginStart="5dp"-->
                    <!--android:layout_marginEnd="10dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:background="@drawable/mybutton2"-->
                    <!--android:fontFamily="@font/montserrat_medium"-->
                    <!--android:text="Connect"-->
                    <!--android:textAppearance="@style/TextAppearance.AppCompat.Body2"-->
                    <!--android:textColor="#333333"-->
                    <!--/>-->

                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/reasonImg"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circle_border"
            android:src="@drawable/denting_painting" />

    </FrameLayout>

</FrameLayout>