<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    tools:context=".LoginActivity">

    <FrameLayout
        android:id="@+id/frame1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <!--background and logo-->
            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight=".9"
                    android:background="@drawable/login_background"
                    android:contentDescription="@string/login_background" />

                <!--Blank for giving gap-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    tools:ignore="UselessLeaf">

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp">
                <ImageView
                    android:contentDescription="@string/app_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/app_icon" />
            </RelativeLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="192dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_marginVertical="40dp"
                        android:layout_marginLeft="28dp"
                        android:layout_marginRight="28dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textColor="@color/mek_grey"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/login" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/mek_grey"
                            android:layout_marginTop="8dp"
                            android:text="@string/enter_employee_id_and_password_to_submit" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:paddingTop="28dp"
                            android:paddingHorizontal="4dp"
                            android:fontFamily="@font/gotham_book"
                            android:textSize="12sp"
                            android:textColor="@color/light_grey"
                            android:labelFor="@id/emp_id"
                            android:text="@string/enter_your_employee_id" />
                        <EditText
                            android:id="@+id/emp_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:inputType="textAutoComplete"
                            android:textStyle="bold"
                            android:autofillHints="username" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:paddingTop="28dp"
                            android:paddingHorizontal="4dp"
                            android:fontFamily="@font/gotham_book"
                            android:textSize="12sp"
                            android:textColor="@color/light_grey"
                            android:labelFor="@id/emp_psw"
                            android:text="@string/password" />
                        <EditText
                            android:id="@+id/emp_psw"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:inputType="textPassword"
                            android:textStyle="bold"
                            android:autofillHints="username" />
                        <TextView
                            android:id="@+id/tv5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#FFAC30"
                            android:text="@string/forgot_password"
                            android:paddingTop="16dp"
                            android:textAlignment="viewEnd"
                            android:fontFamily="@font/montserrat_semi_bold" />
                        <Button
                            android:id="@+id/btn_login"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:layout_marginTop="24dp"
                            android:background="@color/mek_red"
                            android:onClick="loginSubmit"
                            android:text="@string/submit"/>

                    </LinearLayout>

                </FrameLayout>

                <TextView
                    android:id="@+id/btv_faqs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:drawableStart="@drawable/ic_faqs"
                    android:gravity="start"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp"
                    android:drawablePadding="24dp"
                    android:textColor="@color/mek_grey"
                    android:drawableEnd="@drawable/ic_right_arrow"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:textAllCaps="false"
                    android:text="@string/faq_s"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_colour" />
                <TextView
                    android:id="@+id/btv_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:drawablePadding="24dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:drawableStart="@drawable/ic_feedback"
                    android:gravity="start"
                    android:layout_marginBottom="24dp"
                    android:textColor="@color/mek_grey"
                    android:drawableEnd="@drawable/ic_right_arrow"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:textAllCaps="false"
                    android:text="@string/send_feedback"/>

            </LinearLayout>

        </FrameLayout>

    </FrameLayout>

</ScrollView>