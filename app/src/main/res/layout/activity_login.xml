<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    tools:context=".LoginActivity">

    <FrameLayout
        android:id="@+id/frame1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--background and logo-->
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:weightSum="2"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/login_background"
                android:contentDescription="@string/login_background" />

            <!--Blank for giving gap-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:ignore="UselessLeaf">

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp">
            <ImageView
                android:contentDescription="@string/app_icon"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/app_icon" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="168dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="28dp"
                    android:layout_marginVertical="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/login"
                        android:textColor="@color/mek_grey"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/enter_employee_id_and_password_to_submit"
                        android:textColor="@color/mek_grey"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/gotham_book"
                        android:labelFor="@id/emp_id"
                        android:paddingHorizontal="4dp"
                        android:paddingTop="28dp"
                        android:text="@string/enter_your_employee_id"
                        android:textColor="@color/offwhite"
                        android:textSize="10sp" />

                    <EditText
                        android:id="@+id/emp_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints="username"
                        android:fontFamily="@font/gotham_medium"
                        android:inputType="textAutoComplete"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/gotham_book"
                        android:labelFor="@id/emp_psw"
                        android:paddingHorizontal="4dp"
                        android:paddingTop="28dp"
                        android:text="@string/password"
                        android:textColor="@color/light_grey"
                        android:textSize="10sp" />

                    <EditText
                        android:id="@+id/emp_psw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints="username"
                        android:fontFamily="@font/gotham_medium"
                        android:inputType="textPassword"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham_book"
                        android:paddingTop="16dp"
                        android:text="@string/forgot_password"
                        android:textAlignment="viewEnd"
                        android:textColor="#FFAC30"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/red_button"
                        android:fontFamily="@font/montserrat_medium"
                        android:onClick="loginSubmit"
                        android:text="@string/submit"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="24dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/btv_faqs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:drawableStart="@drawable/ic_faqs"
                    android:gravity="start"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_margin="8dp"
                    android:padding="8dp"
                    android:drawablePadding="16dp"
                    android:textColor="@color/mek_grey"
                    android:layout_gravity="center"
                    android:drawableEnd="@drawable/ic_right_arrow"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:textAllCaps="false"
                    android:text="@string/faq_s" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_colour" />

                <TextView
                    android:id="@+id/btv_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:drawablePadding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginTop="24dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:drawableStart="@drawable/ic_feedback"
                    android:gravity="start|center"
                    android:textColor="@color/mek_grey"
                    android:drawableEnd="@drawable/ic_right_arrow"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:textAllCaps="false"
                    android:text="@string/send_feedback" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</ScrollView>